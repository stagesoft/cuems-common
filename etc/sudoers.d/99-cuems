cuems ALL=(root) NOPASSWD: /bin/systemctl reload avahi-daemon
cuems ALL=(root) NOPASSWD: /usr/bin/cp /usr/share/cuems/cuems.service.firstrun /etc/avahi/services/cuems.service
cuems ALL=(root) NOPASSWD: /usr/bin/cp /usr/share/cuems/cuems.service.master /etc/avahi/services/cuems.service
cuems ALL=(root) NOPASSWD: /usr/bin/cp /usr/share/cuems/cuems.service.slave /etc/avahi/services/cuems.service